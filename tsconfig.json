{
  "compilerOptions": {
    "incremental": true,
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "baseUrl": ".",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist/types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true
  },
  "exclude": ["./tests"]
}
